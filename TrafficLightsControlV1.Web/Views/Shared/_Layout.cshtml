<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="header" class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <span class="pull-left glyphiconIconContainer glyphiconIconContainerHamburger">
                <span class="glyphicon glyphicon-th-list glyphiconIcon glyphiconIconHamburger"></span>
            </span>
            <a class="navbar-brand" href="@Url.Action("Index", "TrafficJunction")">
                <img src="~/Images/traffic-lights-control-icon.png" />
            </a>
        </div>
        <a href="@Url.Action("Details", "SystemWideSettings")" class="pull-right glyphiconIconContainer">
            <span class="glyphicon glyphicon-cog glyphiconIcon glyphiconIconSystemWideSettings"></span>
        </a>
    </div>
    <div id="wrapper">
        <div id="main-wrapper" class="col-md-11 pull-right">
            <div id="main">
                <div class="page-header">
                    <h3>Place Holder For Page Header</h3>
                </div>
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="col-xs-12 footer">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customscripts")
    @RenderSection("scripts", required: false)
</body>
</html>
