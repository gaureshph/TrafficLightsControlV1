@model TrafficJunctionViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.JunctionName</title>
</head>
<body>
    <h4>@Model.JunctionName</h4>
    @foreach (var signal in Model.TrafficSignals)
    {
        switch (signal.ExitDirection)
        {
            case TrafficLightsControlV1.Web.Enums.ExitDirection.EXITUP:
                <div>
                    Traffic Signal At Exit 1
                </div>
                break;
            case TrafficLightsControlV1.Web.Enums.ExitDirection.EXITRIGHT:
                <div>
                    Traffic Signal At Exit 2
                </div>
                break;
            case TrafficLightsControlV1.Web.Enums.ExitDirection.EXITDOWN:
                <div>
                    Traffic Signal At Exit 3
                </div>
                break;
            case TrafficLightsControlV1.Web.Enums.ExitDirection.EXITLEFT:
                <div>
                    Traffic Signal At Exit 4
                </div>
                break;
        }
        <div>
            @if (signal.IsGreen)
            {
                <div style="width:10px; height:10px; border-radius:10px;color:green;"></div>
            }
            else
            {
                <div style="width:10px; if; border-radius:10px;color:red;"></div>
            }
        </div>
    }
</body>
</html>
